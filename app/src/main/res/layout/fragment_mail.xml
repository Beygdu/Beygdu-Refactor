<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mail_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="is.example.aj.beygdu.Fragments.MailFragment">

    <!-- TODO: Update blank fragment layout -->
    <Spinner
        android:id="@+id/mail_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"/>
    <EditText
        android:id="@+id/mail_subject"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/inputborder"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:text="@string/hello_blank_fragment"
        android:layout_below="@+id/mail_spinner"/>
    <EditText
        android:id="@+id/mail_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/inputborder"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@+id/mail_subject"/>

    <RelativeLayout
        android:id="@+id/mail_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/mail_cancelButton"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/greybutton"
            android:text="@string/contact_cancelButton"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/mail_okButton"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button"
            android:text="@string/contact_okButton"
            android:textSize="20sp"/>

    </RelativeLayout>

</RelativeLayout>
