<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="is.arnastofnun.Fragments.AuthorFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textColor="@color/white"
        android:background="@color/d_blue"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp"/>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="190dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- ARNAR -->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/arnarImg"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_placeholder_image"
                    android:layout_marginRight="10dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:gravity="center_vertical">

                    <TextView android:id="@+id/arnarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/author_placeholder"/>

                    <TextView android:id="@+id/arnarDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/author_placeholder" />
                </LinearLayout>
            </TableRow>


            <!-- Daniel -->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/danielImg"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_placeholder_image"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:gravity="center_vertical">

                    <TextView android:id="@+id/danielTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/author_placeholder"/>

                    <TextView android:id="@+id/danielDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/author_placeholder" />
                </LinearLayout>
            </TableRow>


            <!-- Jon -->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/jonImg"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_placeholder_image"
                    android:layout_marginRight="10dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:gravity="center_vertical">

                    <TextView android:id="@+id/jonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/author_placeholder"/>

                    <TextView android:id="@+id/jonDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/author_placeholder" />
                </LinearLayout>
            </TableRow>

            <!-- Snaer -->
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/snaerImg"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_placeholder_image"
                    android:layout_marginRight="10dp"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" android:gravity="center_vertical">

                    <TextView android:id="@+id/snaerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/author_placeholder"/>

                    <TextView android:id="@+id/snaerDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:text="@string/author_placeholder" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>